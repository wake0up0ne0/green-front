@page "/counter"
@using RestSharp
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<button class="btn btn-primary" @onclick="MakeRequest">Click me</button>

<!-- Add an input field for displaying the BTC price -->
<input type="text" @bind="btcPrice" placeholder="BTC Price will appear here..." />
@code {
    private string btcPrice = ""; // This will hold the fetched BTC price

    private async void MakeRequest()
    {
        Console.WriteLine("btc is : 1111111111111");
        var options = new RestClientOptions("https://api.binance.com")
        {
            MaxTimeout = -1,
        };
        var client = new RestClient(options);
        var request = new RestRequest("/api/v3/ticker/price?symbol=BTCUSDT", Method.Get);
        RestResponse response = await client.ExecuteAsync(request);
        
        // Assuming the response is in JSON format and contains a "price" field
        if (response.IsSuccessful && !string.IsNullOrEmpty(response.Content))
        {
            var content = System.Text.Json.JsonDocument.Parse(response.Content).RootElement;
            if (content.TryGetProperty("price", out var priceProp) && priceProp.ValueKind == System.Text.Json.JsonValueKind.String)
            {
                btcPrice = priceProp.GetString();
            }
        }
    }
}
